---
import Layout from "../layouts/Layout.astro"
import "../styles/global.css"
import reviewData from "../data/googleReviews"
import Review from "../components/Review.astro"
import Hero from "../components/Hero.astro"

---

<Layout 
    seo={{
        title: "Reviews Page",
        description: "See what people are saying about Sinno Technologies Limited"
    }}
    >
    <section class="wrapper">
        <Hero title="Testimonials" subtitle="Here's What Our Clients Have To Say About Us" />
        <div class="reviewsContainer">
            {reviewData.map((review,index) => (
            <Review {...review} />
            ))} 
        </div>
    </section>
</Layout>
<style>
    .wrapper{
        background-color: var(--bgWhite);
    }

    h1, 
    h3{
        padding: 1rem;
    }

    .reviewsContainer{
        display: grid;
        grid-template-columns: repeat(1,1fr);
        justify-items: center;
        padding: 1rem;
        gap:1rem;
    }
p
    @media (min-width: 501px) and (max-width: 850px) {
        .reviewsContainer{
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (min-width: 851px) {
        .reviewsContainer{
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
