---
import Layout from "../layouts/Layout.astro"
import TeamMember from "../components/teamCard.astro"
import Consultation from "../components/Consultation.astro";
import { teamMembers } from "../data/teamMembers.js";
import Hero from "../components/Hero.astro";
---

<Layout seo={{
	title: "Team Page",
	description: "Team members and trusted partners page."
}}>
  <section class="wrapper">
    <Hero
        title="Meet Our Team"
        subtitle="Our team is dedicated to delivering innovative and accessible software solutions to help your business thrive."
      />
    <div class="content">
        <div class="teamMembers maxWidth">
          {teamMembers.map((member) => (
            <TeamMember {...member} />
          ))}
        </div>
        <Consultation backgroundColor="var(--black)" color="var(--white)"/>
    </div>
  </section>
</Layout>

<style>
  .wrapper{
    background-color: var(--sectWhite);
  }

  .content{
    text-align: center;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
  }

  .teamMembers{
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    justify-items: center;
    align-items: start;
  }


  @media (min-width: 577px){
    .teamMembers{
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
