---
import Consultation from "./Consultation.astro";
import { Image } from "astro:assets";
import computer from "../assets/icons/computer.svg";
import remediation from "../assets/icons/remediation.svg";
import teach from "../assets/icons/teach.svg";
---

<section class="sectionContainer" id="services">
    <div class="contentContainer maxWidth">
        <h2 class="servicesTitle">How We Serve Your Business</h2>
        <div class="servicesContainer">
            <div class="servicesBlock">
                <Image class="image" src={computer} alt="a computer" title="Computer for new websites" />
                <h3 class="services">New Websites</h3>
                <p class="text">For Businesses and Consultants who want to start their online journey.</p>
            </div>
            <div class="servicesBlock">
                <Image class="image" src={remediation} alt="a first aid kit" title="First aid kit for websites" />
                <h3 class="services">Website Rejuvenation</h3>
                <p class="text">We audit and remediate your current website to be more accessible, functional and user-friendly.</p>
            </div>
            <div class="servicesBlock">
                <Image class="image" src={teach} alt="a teacher" title="Educational services for digital accessibility" />
                <h3 class="services">Education</h3>
                <p class="text">We offer webinars and talks on digital accessibility to help educate your team on accessibility best practices.</p>
            </div>
        </div>
        <Consultation backgroundColor="var(--yellow)" color="var(--black)"/>
    </div
</section>

<style>
    .sectionContainer {
        width: 100%;
        height: auto;
        background-color: var(--white);
        color: var(--black);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }
    
    .contentContainer{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
        padding: 2rem 1rem;
    }

    .servicesContainer{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        gap: 1.5rem;
    }
    
    .servicesBlock{
        width: 100%;
        height: auto;
        border: 2px solid var(--black);
        border-radius: 0.5rem;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        text-align: justify;
    }

    .image{
        width: 50%;
        height: auto;
    }
    @media screen and (max-width: 768px) {
        .servicesContainer{
            flex-direction: column;
            align-items:  flex-start;
        }

        .image{
            width: 30%;
        }
    }

    @media (min-width: 769px) and (max-width: 992px) {
        .servicesContainer{
            flex-wrap: wrap;
            align-items: flex-start;
        }

        .image{
            width: 40%;
        }
    }
</style>