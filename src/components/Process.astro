---
import Consultation from "./Consultation.astro";
import { Image } from "astro:assets";
import accessibility from "../assets/icons/accessibility.svg";
import functional from "../assets/icons/functional.svg";
import findable from "../assets/icons/findable.svg";
---

<section class="sectionContainer" id="process">
    <div class="contentContainer maxWidth">
        <h2 class="processTitle">Realizing Your Website's Potentional</h2>
        <div class="processContainer">
            <div class="processBlock">
                <Image class="image" src={accessibility} alt="An accessibility person"/>
                <h3 class="process">Accessible</h3>
                <p class="text">Good design is inclusive. Design your website to meet the Web Content Accessibility Guidelines (WCAG) 2.2 standards.</p>
            </div>
            <div class="processBlock">
                <Image class="image" src={functional} alt="a gear"/>
                <h3 class="process">Functional</h3>
                <p class="text">Stay on top of trends with a user-friendly, functional website.</p>
            </div>
            <div class="processBlock">
                <Image class="image" src={findable} alt="a magnifying glass"/>
                <h3 class="process">Findable</h3>
                <p class="text">Increase traffic to your business with a search engine friendly website.</p>
            </div>
        </div>
        <Consultation backgroundColor="var(--yellow)" color="var(--black)"/>
    </div
</section>

<style>
    .sectionContainer {
        width: 100%;
        height: auto;
        background-color: var(--sectWhite);
        color: var(--black);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }
    
    .contentContainer{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
        padding: 2rem 1rem;
    }

    .processContainer{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        gap: 1.5rem;
    }
    
    .processBlock{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .processTitle,
    .process{
        font-weight: bold;
    }

    .image{
        width: 50%;
        height: auto;
        align-self: center;
    }

    @media screen and (max-width: 768px) {
        .processContainer{
            flex-direction: column;
            align-items:  flex-start;
        }
        .image{
            width: 30%;
        }
    }

    @media (min-width: 769px) and (max-width: 992px) {
        .processContainer{
            flex-wrap: wrap;
            align-items: flex-start;
        }
        
        .image{
            width: 40%;
        }
    }
</style>