---
import cardData from "../data/cardData";
import Card from "./Card.astro";
import parkland from "../assets/ParklandPM.png";
import unum from "../assets/unumHealth.png";
import game from "../assets/game_tracker.gif";
import ramp from "../assets/rampatl.png";

const imgArr = [parkland, unum, game, ramp];
---

<section class="mainContainer" id="projects">
    <div class="contentContainer maxWidth">
        <h3 class="projects">Projects</h3>
        <div class="cardContainer">
            {cardData.map((card, index) => (
                <Card
                key={index}
                title={card.title}
                body={card.body}
                img={imgArr[index]}
                href={card.href}
                alt={card.alt}
                target={card.target}
                rel={card.rel}
                />
            ))}
        </div>
        <a href="https://github.com/jamilsinno?tab=repositories" target="_blank" rel="noreferrer noopener nofollow" class="buttonProjects">View more projects on GitHub</a>
    </div>
</section>

<style>
    .mainContainer{
        width:100%;
        height: auto;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
        background-color: var(--sectWhite);
        padding: 1rem;
        gap: 3rem;
    }

    .contentContainer{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
    
    .projects{
        font-size: 3.5rem;
        font-weight: bold;
        width: 100%;
        height: auto;
        text-align: center;
        color: black;
    }

    .cardContainer{
        width: 100%;
        height: auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .buttonProjects{
        padding: 1rem;
        font-size: 1.6rem;
        color: var(--white);
        background-color: var(--black);
        border-radius: 1em;
        text-align: center;
    }

    .buttonProjects:is(:hover, :focus-within) {
		background-color: var(--white);
        color: var(--black);
        border: 2px solid var(--black);
		transition: 0.3s;
    }

    @media screen and (max-width: 992px) {
        .projects{
            font-size: 2.5rem;
        }
        .buttonProjects{
            font-size: 1.2rem;
        }
        .cardContainer{
            grid-template-columns: 1fr;
        }
    }
</style>
