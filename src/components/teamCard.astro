---
import { Image } from "astro:assets"
import LinkedIn from "../assets/icons/linkedin.svg"
import Email from "../assets/icons/email.svg"
import Resume from "../assets/icons/resume.svg"

export interface Props {
  name: string;
  title: string;
  bio: string;
  image: string;
  linkedInUrl?: string; 
  resume?: string;
  email: string;
}

const { name, title, bio, image, linkedInUrl, resume, email } = Astro.props as Props;
---

<div class="team-member">
  <div>
    <Image src={image} alt={`${name}'s photo`} class="profile-pic" />
    <h2>{name}</h2>
    <h4>{title}</h4>
  </div>
  <p class="bio">{bio}</p>
  <div class="links">
    {linkedInUrl && (
        <a href={linkedInUrl} class="link" target="_blank" rel="noopener noreferrer"><Image class="icon" src={LinkedIn} alt="LinkedIn Icon"/>LinkedIn</a>
    )}
    {email && (
        <a href={`mailto:${email}`} class="link" rel="noreferrer noopener nofollow"><Image class="icon" src={Email} alt="Email Icon"/>Email</a>
    )}
    {resume && (
        <a href={resume} class="link" target="_blank" rel="noopener noreferrer"><Image class="icon" src={Resume} alt="Resume Icon"/>Resume</a>
    )}
  </div>
</div>

<style>
  .team-member {
    width: 100%;
    height: 100%;
    max-width: 400px;
    border: 1px solid var(--black);
    border-radius: 0.5rem;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    gap: 1rem;
    text-align: center;
    background-color: var(--sectYellow);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .profile-pic {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
    margin-bottom: 1rem;
  }

    .links{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        width: 100%;
        height: auto;
        justify-items: center;
    }

    .link{
        color: var(--black);
        text-decoration: underline;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 0.3rem;
        width: auto;
    }

    .link:focus{
        outline: 2px dotted var(--black);
    }
    
    .icon{
        max-width: 30px;
        max-height: 30px;
    }

  .bio {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 1.5em;
  }

  .link{
    text-decoration: underline;
  }
</style>
