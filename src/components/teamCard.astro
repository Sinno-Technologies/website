---
import { Image } from "astro:assets"

export interface Props {
  name: string;
  title: string;
  bio: string;
  image: string;
  linkedInUrl?: string; 
  resume?: string;
}

const { name, title, bio, image, linkedInUrl, resume } = Astro.props;
---

<div class="team-member">
  <div>
    <Image src={image} alt={`${name}'s photo`} class="profile-pic" />
    <h2>{name}</h2>
    <h4>{title}</h4>
  </div>
  <p class="bio">{bio}</p>
  <div class="linkContainer">
    {linkedInUrl && (
      <a href={linkedInUrl} class="link" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    )}
    {resume && <a href={resume} class="link" target="_blank" rel="noopener noreferrer">Resume</a>}
  </div>
</div>

<style>
  .team-member {
    width: 100%;
    height: 100%;
    max-width: 400px;
    border: 1px solid var(--black);
    border-radius: 0.5rem;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    gap: 1rem;
    text-align: center;
    background-color: var(--sectYellow);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }

  .profile-pic {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
    margin-bottom: 1rem;
  }

  .linkContainer{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 1rem 0;
    gap: 1rem;
  }

  .bio {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 1.5em;
  }

  .link{
    text-decoration: underline;
  }
</style>
