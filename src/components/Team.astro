---
import { Image } from "astro:assets";
import Jamil from "../assets/jamil.jpeg";
import LinkedIn from "../assets/icons/linkedin.svg"
import GitHub from "../assets/icons/github.svg"
import Email from "../assets/icons/email.svg"
import Resume from "../assets/icons/resume.svg"
import Consultation from "./Consultation.astro";
---

<section class="teamContainer" id="team">
    <h2 class="title">Meet Our Team</h2>
    <div class="contentContainer maxWidth">
        <div class="textContainer">
            <h3 class="name">Jamil Sinno</h3>
            <span class="role">Founder & Principal Consultant</span>
            <span class="role">DHS Trusted Tester</span>
            <span class="location">Halifax, NS</span>
            <p class="text">
                I believe in the power of accessible web design to transform businesses. At Sinno Technologies Limited, our mission is to help companies bring their visions to life by creating inclusive digital experiences that drive engagement, generate leads, and boost sales.
            </p>
            <div class="linkContainer">
                <h3 class="linkTitle">Connect with me:</h3>
                <div class="links">
                    <a href="https://www.linkedin.com/in/jamilsinno/" class="link" rel="noreferrer noopener nofollow" target="_blank"><Image class="icon" src={LinkedIn} alt="LinkedIn Icon"/>LinkedIn</a>
                    <a href="https://github.com/jamilsinno" class="link" rel="noreferrer noopener nofollow" target="_blank"><Image class="icon" src={GitHub} alt="GitHub Icon"/>GitHub</a>
                    <a href="mailto:jamil@sinno.ca" class="link" rel="noreferrer noopener nofollow" target="_blank"><Image class="icon" src={Email} alt="Email Icon"/>Email</a>
                    <a href="/resume.pdf" class="link" rel="noreferrer noopener nofollow" target="_blank"><Image class="icon" src={Resume} alt="Resume Icon"/>Resume</a>
                </div>
            </div>
        </div>
        <div class="imageContainer">
            <Image class="image" src={Jamil} alt="Photo of Jamil Sinno"/>
        </div>
    </div>
        <Consultation backgroundColor="var(--black)" color="var(--white)"/>
</section>

<style>
    .teamContainer {
        width: 100%;
        height: auto;
        background-color: var(--sectYellow);
        color: var(--black);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 2rem 1rem;
    }

    .contentContainer {
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .textContainer{
        max-width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 1rem;
    }

    .image {
        width: 100%;
        height: auto;
        border-radius: 50%;
        max-width: 500px;
        max-height: 500px;
    }

    .role{
        font-weight: bold;
    }
    
    .links{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: 1rem;
    }

    .link{
        color: var(--black);
        text-decoration: underline;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: 0.5rem;
        width: 100%;
    }

    .link:focus{
        
        outline: 2px dotted var(--black);
    }
    
    .linkTitle{
        font-weight: bold;
    }

    .icon{
        max-width: 30px;
        max-height: 30px;
    }

    .location{
        font-style: italic;
    }

    @media screen and (max-width: 768px) {
        .teamContainer {
            flex-direction: column;
        }

        .contentContainer{
            flex-direction: column-reverse;
        }

        .textContainer,
        .imageContainer{
            max-width: 100%;
        }
        .image {
            max-width: 300px;
            max-height: 300px;
        }

        .links{
            flex-direction: column;
        }
    }

    @media screen and (min-width: 769px) and (max-width: 992px) {
        .image {
            max-width: 400px;
            max-height: 400px;
        }
    }
</style>
