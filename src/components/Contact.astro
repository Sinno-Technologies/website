<section class="sectionContainer" id="contact">
    <h1 class="contact">Contact Us</h1>
    <div class="line"></div>
    <p class="text">Get in contact today!</p>
    <form class="form" name="contactForm" method="POST" netlify>

        <label class="label" for="fname">First Name*</label>
        <input class="input" type="text" id="fname" name="firstname" placeholder="Your first name" required>

        <label class="label" for="lname">Last Name*</label>
        <input class="input" type="text" id="lname" name="lastname" placeholder="Your last name" required>

        <label class="label" for="email">Email Address*</label>
        <input class="input" type="email" id="email" name="email" placeholder="Your email address" required>

        <label class="label" for="company">Company</label>
        <input class="input" type="text" id="company" name="company" placeholder="Your company name">

        <label class="label" for="number">Number</label>
        <input class="input" type="tel" id="number" name="number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Please use ten digit format 999-999-9999">

        <label class="label" for="message">Subject*</label>
        <textarea id="message" rows="6" name="message" placeholder="Your message here" required></textarea>

        <p class="text">* Required</p>
        <button class="submit" type="submit">Submit</button>

    </form>
</section>
<style>
    .sectionContainer{
		padding: 1rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: var(--bgBlack);
        gap: 1rem;
    }

    .contact{
        font-size: 3.5rem;
        padding: 1rem;
        text-align: center;
        font-weight: bold;
    }

    .text{
        font-size: 1.8rem;
        padding: 1rem;
    }
    .form{
        display: flex;
        width: 100%;
        height: auto;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 1rem;
        padding: 1rem;
        border: 2px solid var(--yellow);
		border-radius: 1rem;
        max-width: 800px;
    }

    .label{
        font-weight: 500;
        font-size: 1.6rem;
    }

    .input,
    #message{
        width: 100%;
        padding: 1rem;
		background-color: var(--bgWhite);
        border-radius: 1rem;
        font-size: 1.4rem;
    }

    .submit{
        width: 25%;
        height: auto;
        align-self: center;
        padding: 1rem;
        text-align: center;
        background-color: var(--bgBlack);
        border: 2px solid var(--yellow); 
        color: var(--white);
        border-radius: 1em;
        font-size: 1.4rem;
    }

    .submit:hover {
        background-color: var(--yellow);
        color: var(--black);
        border: 2px solid var(--white);
        transition: 0.3s;
    }

    @media screen and (max-width: 1080px) {
        .contact{
            font-size: 2.5rem;
        }
        .text{
            font-size: 1.8rem;
        }
        .form{
            width: 90%;
        }
        .submit{
            width: auto;
        }

        .label,
        .input,
        .submit,
        #message{
            font-size: 1.2rem;
            line-height: 1.2rem;
        }
    }
</style>