---
import { Image } from "astro:assets";
import accessibility from "../assets/icons/accessibility.svg";
import functional from "../assets/icons/functional.svg";
import findable from "../assets/icons/findable.svg";
---

<section class="container">
    <div class="background">
        <div class="content maxWidth">
            <div class="titleContainer">
                <h1 class="title">Websites Made <span class="highlight">Accessible</span></h1>
            </div>
            <div class="heroBottom">
                <div class="processContainer">
                    <div class="processBlock">
                        <Image class="image" src={accessibility} alt="An accessibility person"/>
                        <h3 class="process">Accessible</h3>
                        <p class="text">Good design is inclusive. Design your website to meet the Web Content Accessibility Guidelines (WCAG) 2.2 standards.</p>
                    </div>
                    <div class="processBlock">
                        <Image class="image" src={functional} alt="a gear"/>
                        <h3 class="process">Functional</h3>
                        <p class="text">Stay on top of trends with a user-friendly, functional website.</p>
                    </div>
                    <div class="processBlock">
                        <Image class="image" src={findable} alt="a magnifying glass"/>
                        <h3 class="process">Findable</h3>
                        <p class="text">Increase traffic to your business with a search engine friendly website.</p>
                    </div>
                </div>
                <a href="/contact" class="contact">Contact Us</a>
            </div>
        </div>
    </div>
</section>

<style>
    .container{
        background-image: url('/halifax.webp');
        background-size: 100% auto;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        width: 100vw;
        height: 90vh;
        color: var(--white);
    }

    .background{
        width:100%; 
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }

    .content{
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        gap: 5rem;
        padding: 1rem 0;
    }

    .titleContainer{
        width:100%;
        height: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .heroBottom{
        width: 100%;
        height: 50%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
    }

    .title{
        width: 100%;
        height: auto;
        text-align: center;
        font-weight: bold;
        color: var(--white);
    }

    .processContainer{
        width: 100%;
        height: auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .processBlock{
        width: 100%;
        height: 100%;
        background-color: var(--sectYellow);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        color: var(--black);
        text-align: center;
        padding: 1rem;
    }

    .image{
        width: 50px;
        height: 50px;
    }

    .contact{
        padding: 1rem;
        background-color: var(--buttonBlack);
        border: 2px solid var(--white);
        color: var(--white);
        border-radius: 0.5rem;
        justify-self: flex-end;
        align-self: center;
        font-size: var(--font-size-lg);
    }

    .contact:hover{
        background-color: var(--white);
        color: var(--black);
        border: 2px solid var(--white);
        transition: 0.3s;
    }

    @media screen and (max-width: 576px) {
        .contact{
            font-size: var(--font-size-sm);
        }
    }

    @media (min-width: 577px) and (max-width: 768px) {
        .contact{
            font-size: var(--font-size-base);
        }
    }

    @media screen and (max-width: 992px) {
        .container{
            justify-content: flex-start;;
            height: auto;
        }
        .processContainer{
            grid-template-columns: repeat(1, 1fr);
        }

    }
</style>
