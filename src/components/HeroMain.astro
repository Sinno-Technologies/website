---
import { Image } from "astro:assets";
import accessibility from "../assets/icons/accessibility.svg";
import functional from "../assets/icons/functional.svg";
import findable from "../assets/icons/findable.svg";
import Button from "../components/Button.astro";
---

<section class="container">
    <div class="background">
        <div class="content maxWidth">
            <div class="titleContainer">
                <h1 class="title center">The Web Made <span class="highlight">Accessible</span></h1>
                <h4 class="subtitle center">Web accessibility means including everyone, regardless of their abilities, to create an inclusive digital space. At Sinno Technologies Limited, we work closely with clients to meet all required Web Content Accessibility Guidelines (WCAG).</h4>
            </div>
            <div class="heroBottom">
                <div class="processContainer">
                    <div class="processBlock">
                        <Image class="image" src={accessibility} alt="An accessibility person"/>
                        <h5 class="process">Accessible</h5>
                        <p class="text">Accessible software allows everyone to understand, navigate, perceive, and engage with the Web.</p>
                    </div>
                    <div class="processBlock">
                        <Image class="image" src={functional} alt="a gear"/>
                        <h5 class="process">Functional</h5>
                        <p class="text">Reduce clutter and guide your users through good design and simplified features.</p>
                    </div>
                    <div class="processBlock">
                        <Image class="image" src={findable} alt="a magnifying glass"/>
                        <h5 class="process">Searchable</h5>
                        <p class="text">Increase traffic to your website through search engine optimization (SEO).</p>
                    </div>
                </div>
                <Button 
                    backgroundColor="var(--yellow)"
                    color="var(--black)"
                    href="/contact"
                    text="Contact Us"
                    />
            </div>
        </div>
    </div>
</section>

<style>
    .container{
        background-image: url('/halifax.webp');
        background-size: 100% auto;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        width: 100%;
        height: 90vh;
        color: var(--white);
    }

    .background{
        width:100%; 
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
    }

    .content{
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        gap: 5rem;
        padding: 1rem 0;
    }

    .titleContainer{
        width:100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .heroBottom{
        width: 100%;
        height: 50%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
    }

    .title{
        width: 100%;
        height: auto;
        text-align: center;
        font-weight: bold;
        color: var(--white);
    }

    .subtitle{
        color: white;
    }

    .processContainer{
        width: 100%;
        height: auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .processBlock{
        width: 100%;
        height: 100%;
        background-color: var(--sectYellow);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        color: var(--black);
        text-align: center;
        padding: 1rem;
        border-radius: 0.5rem;
        box-shadow: 4px 4px 4px rgba(0,0,0,0.9);
    }

    .image{
        width: 50px;
        height: 50px;
    }

    .contact{
        padding: 1rem;
        background-color: var(--buttonBlack);
        border: 2px solid var(--white);
        color: var(--white);
        border-radius: 0.5rem;
        justify-self: flex-end;
        align-self: center;
        font-size: var(--font-size-lg);
    }

    .contact:hover{
        background-color: var(--white);
        color: var(--black);
        border: 2px solid var(--white);
        transition: 0.3s;
    }

    @media screen and (max-width: 576px) {
        .contact{
            font-size: var(--font-size-sm);
        }
    }

    @media (min-width: 577px) and (max-width: 768px) {
        .contact{
            font-size: var(--font-size-base);
        }
    }

    @media screen and (max-width: 992px) {
        .container{
            justify-content: flex-start;;
            height: auto;
        }
        .processContainer{
            grid-template-columns: repeat(1, 1fr);
        }

    }
</style>
