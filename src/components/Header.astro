---
import { Image } from "astro:assets";
import LogoMain from "../assets/logo_header_white.svg";
import HamburgerMenu from "../components/HamburgerMenu.jsx";
import Nav from "../components/Nav.jsx";
---
<header class="header" id="header">
    <section class="wrapper">
        <div class="right hamburger">
            <HamburgerMenu client:load/>
        </div>
        <div class="right nav">
            <Nav justify={true} client:load/>
        </div>
        <div class="left">
            <a href="/">
                <Image src={LogoMain}  alt="Sinno Technologies Main Logo."/>
            </a>
        </div>
    </section>
    <div class="hamburger">
        <Nav flexColumn={true} client:load/>
    </div>
</header>

<style>
    .header{
        position: sticky;
        top: 0; 
        width: 100%;
        height: auto;
        background-color: var(--white);
        z-index: 100;
        padding: 0 1rem;
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .wrapper{
        display: flex;
        flex-direction: row-reverse;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        height: auto;
        padding-left: 1rem;
    }

    .left{
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
    }
    .left *{
        max-height: 80px;
        width: auto;
    }

    .right{
        display: flex; 
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
    }

    .hamburger {
        display: none;
    }

    .nav {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: 1rem;
    }

    @media screen and (max-width: 768px) {
        .hamburger {
            display: flex;
        }

        .nav {
            display: none;
        }
    }
</style>