---
export interface Props {
		key: number,
		title: string,
		body: string,
		img: ImageMetadata,
		href: string,
		alt: string,
		target: string,
		rel: string,
}

import { Image } from "astro:assets";

const { href, title, body, img, alt, target, rel } = Astro.props;
---

<section class="link-card">
	<a class="pLink" href={href} target={target} rel={rel}>
		<Image class="image" src={img} alt={alt}/>
		<div>
			<h2 class="title">
				{title}
			</h2>
			<p class="text">
				{body}
			</p>
		</div>
	</a>
</section>
<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
        align-items: center;
        text-align: center;
		background-color: var(--white);
		border-radius: 0.5rem;
		background-position: 100%;
		border: 2px solid var(--black); 
		width: 100%;
		height: auto;
		box-shadow: 2px 2px 2px rgba(0,0,0,0.9);
        max-width: 500px;
	}

	.link-card > .pLink{
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem;
		border-radius: 0.5rem;
		color: var(--black);
		background-color: var(--white);
	}

	.pLink:focus {
		outline: 2px dotted var(--black);
	}

	.image{
		width:100%;
		height: auto;
        max-height: 250px;
		border-radius: 0.5rem;
		max-height: 500px;
	}
	.title {
		font-weight: bold;
		padding: 0.5rem 0;
		color: var(--black);
	}
	.text{
		text-align: center;
		padding: 0 0 1rem 0;
		color: var(--black);
	}

	.link-card > .pLink:hover{
		background-color: var(--bgBlack);
		transition: 0.3s;
	}
	.link-card:is(:hover, :focus-within){
		background-color: var(--bgBlack);
		border-color: var(--white);
		transition: 0.3s;
	}
	.link-card:is(:hover, :focus-within) .title,
	.link-card:is(:hover, :focus-within) .text {
		border-radius: 0.5rem;
		color: var(--white);
		transition: 0.3s;
	}
</style>
