---
export interface Props {
		key: number,
        title: string,
        body: string,
		img: ImageMetadata,
        href: string,
		alt: string,
		target: string,
		rel: string,
}

import { Image } from "astro:assets";

const { href, title, body, img, alt, target, rel } = Astro.props;
---

<div class="link-card">
	<a class="pLink" href={href} target={target} rel={rel}>
		<Image class="image" src={img} alt={alt}/>
		<section>
			<h2 class="title">
				{title}
			</h2>
			<p class="text">
				{body}
			</p>
		</section>
	</a>
</div>
<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		background-color: var(--white);
		border-radius: 1rem;
		background-position: 100%;
        border: 2px solid var(--black); 
		width: 100%;
		height: auto;
	}

	.link-card > .pLink{
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem;
		border-radius: 1rem;
		color: var(--black);
		background-color: var(--white);
	}
	.image{
		width:100%;
		height: auto;
		border-radius: 1rem;
		max-height: 500px;
	}
	.title {
		font-size: 1.8rem;
		font-weight: bold;
		padding: 0.5rem 0;
		color: var(--black);
	}
	.text{
		padding: 0 0 1rem 0;
		color: var(--black);
		font-size: 1.4rem;
	}

	.link-card > .pLink:hover{
		background-color: var(--bgBlack);
		transition: 0.3s;
	}
	.link-card:is(:hover, :focus-within){
		background-color: var(--bgBlack);
		border-color: var(--white);
		transition: 0.3s;
	}
	.link-card:is(:hover, :focus-within) .title,
	.link-card:is(:hover, :focus-within) .text {
		border-radius: 1rem;
        color: var(--white);
        transition: 0.3s;
	}
	@media screen and (max-width: 1080px) {
		.title{
			font-size: 1.8rem;
		}
		.text{
			font-size: 1.2rem;
		}
	}
</style>
